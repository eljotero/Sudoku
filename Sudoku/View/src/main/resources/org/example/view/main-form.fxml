<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.view.UserActionHandling">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>

   <Label>Programowanie komponentowe - Sudoku</Label>

   <Label fx:id="someText">Wybierz poziom trudności</Label>

   <ChoiceBox fx:id="diffLevel" value="Poziom trudności">
      <items>
         <FXCollections fx:factory = "observableArrayList">
            <String fx:value="Prosty"/>
            <String fx:value="Średni"/>
            <String fx:value="Trudny"/>
         </FXCollections>
      </items>
   </ChoiceBox>

   <Button text="Rozpocznij grę" onAction="#playGame"/>

   <Label fx:id = "noDiffSelected"></Label>
</VBox>
